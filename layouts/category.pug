include /mixins/script.pug
include /mixins/type_script.pug
doctype html
html 
    head
        +meta(user.note,user.keyword||'')
        +useBasic
        title= __title__(i18n('Categories'),user.name)
    body.new(OCP='OVERRIDE')
        +NavigationBar
        main.uWcon.withSide.no-anim
            .sideCon#NEO_SIDE
            .mainCon#NEO_REPLACE
                .cSortCon.NeoWidget
                    each item in split.value
                        +SingleSort(item.value,'category')
                +PageNavigator(split.total,split.now,'category')
        +Footer