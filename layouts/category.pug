include /mixins/script.pug
include /mixins/type_script.pug
doctype html
html 
    head
        +meta(user.note,user.keyword||'')
        +useComponent('Neo/Basic')
        +useComponent('Neo/Footer')
        +useComponent('Neo/NavigationBar')
        +useComponent('Neo/PageNavigator')
        title= __title__(i18n('Categories'),user.name)
    body.new(OCP='OVERRIDE')
        +NavigationBar
        +PageLabel(i18n('Categories'))
        main.uWcon
            .cSortCon
                each item in cycling.value
                    +SingleSort(item.value,'category')
            +PageNavigator(cycling.total,cycling.now,'category')
        +Footer