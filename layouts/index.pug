include /mixins/script.pug
doctype html 
html(lang="zh")
    head
        +meta(user.note,user.keyword||'')
        +BasicStyleSheet
        +BasicECMAScript
        +use('KFooter')
        +use('KNavigationBar')
        +use('KUserIntro')
        if sort.defaultOrder.length>10
            +use('KPageNavigator')
        title= __title__(i18n('Home'),user.name)
    body(OCP='OVERRIDE')
        +KNavigationBar
        +KUserIntro
        br
        main.uWcon
            ul.cPostCon
                each bid in sort.defaultOrder.slice(0,10)
                    +SinglePost(IDMap.get(bid))
                    br
        if sort.defaultOrder.length>10
            +KPageNavigator(Math.ceil(sort.defaultOrder.length/10),1,'page')
        hr
        +KFooter