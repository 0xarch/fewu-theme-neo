- COMPONENTS['KUserIntro'] = []

mixin KUserIntro()
    .KUserIntro.uWcon
        h1!= user.name
        div
            a.p8(href=file('feed.xml'))!= plugin.load_svg('kde-rss')+' RSS'
            a.p8(href=user.url)= i18n('Follow')
        br
        div
            span.p8
                b= i18n('Articles')
                != i18n(site.posts.length+' in total')
            span.p8
                b= i18n('Categories')
                != i18n(site.category_count+' in total')
            span.p8
                b= i18n('Tags')
                != i18n(site.tag_count+' in total')