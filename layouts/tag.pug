include /mixins/script.pug
include /mixins/type_script.pug
doctype html
html 
    head
        +meta(user.note,user.keyword||i18n('Tags'))
        +BasicStyleSheet
        +BasicECMAScript
        +use('KFooter')
        +use('KNavigationBar')
        +use('KPageNavigator')
        title= __title__(i18n('Tags'),user.name)
    body.new(OCP='OVERRIDE')
        +KNavigationBar
        +PageLabel(i18n('Tags'))
        main.uWcon
            .cSortCon
                each item in cycling.value
                    +SingleSort(item.value,'tag')
            +KPageNavigator(cycling.total,cycling.now,'tag')
        br
        +KFooter