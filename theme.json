{
    "name": "Neo Theme",
    "author": "0xarch",
    "description": "Fuwari-like theme for Fewu",
    "lib": [
        "@:highlightjs:&&:unpkg"
    ],
    "operations": [
        {
            "do": "copy",
            "from": "@posts",
            "to": "posts"
        }
    ],
    "plugin": true,
    "module": {
        "search": {
            "use": [
                "title",
                "date",
                "id"
            ]
        }
    },
    "parser": "PUG",
    "template": "post.pug",
    "layouts": [
        {
            "name": "Index page (Home page)",
            "from": "index.pug",
            "to": "/"
        },
        {
            "name": "Post list page",
            "from": "page.pug",
            "to": "page",
            "use_split": true,
            "option": {
                "@split": {
                    "parent": "sort.defaultOrder",
                    "every": 10
                }
            }
        },
        {
            "name": "Archive page",
            "from": "archive.pug",
            "to": "archive",
            "use_split": true,
            "option": {
                "@split": {
                    "parent": "sort.defaultOrder",
                    "every": 20
                }
            }
        },
        {
            "name": "Category Template",
            "from": "category.pug",
            "to": "category",
            "use_split": true,
            "option": {
                "@split": {
                    "parent": "site.categories",
                    "every": 48
                }
            }
        },
        {
            "name": "Category (Each) Template",
            "from": "category_every.pug",
            "to": "category/s{{each.name}}",
            "use_foreach": true,
            "use_split": true,
            "option": {
                "@foreach": {
                    "parent": "site.categories"
                },
                "@split": {
                    "parent": "each.value.included",
                    "every": 15
                }
            }
        },
        {
            "name": "Tag Template",
            "from": "tag.pug",
            "to": "tag",
            "use_split": true,
            "option": {
                "@split": {
                    "parent": "site.tags",
                    "every": 48
                }
            }
        },
        {
            "name": "Tag (Each) Template",
            "from": "tag_every.pug",
            "to": "tag/s{{each.name}}",
            "use_foreach": true,
            "use_split": true,
            "option": {
                "@foreach": {
                    "parent": "site.tags"
                },
                "@split": {
                    "parent": "each.value.included",
                    "every": 15
                }
            }
        },
        {
            "name": "status",
            "from": "status.pug",
            "to": "status"
        },
        {
            "name": "about",
            "from": "about.pug",
            "to": "about",
            "addition": {
                "post": "excluded_posts.about\\.md"
            }
        },
        {
            "name": "Part: Side Widgets",
            "from": "part-side-widgets.pug",
            "to": "_neo/side-widgets"
        }
    ]
}
